{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "points and line",
    "width": 400,
    "height": 200,
    "padding": 5,
    "config": {
        "axis": {
            "grid": true,
            "gridColor": "#555",
            "opacity": 0.5
        }
    },
    "data": [
        {
            "name": "table",
            "url": "../specs/table-data.json",
            "on": [
                {
                    "trigger": "changeAmount",
                    "modify": "changeAmount.datum",
                    "values": "{category: changeAmount.datum.category, amount: changeAmount.amount}"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "exportData",
            "on": [
                {
                    "events": {
                        "signal": "changeAmount"
                    },
                    "update": "{name: 'table', values: data('table')}"
                }
            ]
        },
        {
            "name": "selectedCategory",
            "value": {},
            "on": [
                {
                    "events": [
                        {
                            "type": "mousedown",
                            "markname": "point"
                        }
                    ],
                    "update": "datum"
                },
                {
                    "events": [
                        {
                            "type": "mouseup"
                        }
                    ],
                    "update": "{}"
                }
            ]
        },
        {
            "name": "changeAmount",
            "value": {
                "datum": {}
            },
            "on": [
                {
                    "events": [
                        {
                            "type": "mousemove",
                            "between": [
                                {
                                    "type": "mousedown"
                                },
                                {
                                    "type": "mouseup"
                                }
                            ]
                        },
                        {
                            "type": "click"
                        }
                    ],
                    "update": "{amount: round(invert('yscale', y())), datum: selectedCategory}"
                }
            ]
        },
        {
            "name": "info",
            "value": {},
            "on": [
                {
                    "events": {
                        "type": "mouseover",
                        "markname": "point"
                    },
                    "update": "datum"
                },
                {
                    "events": {
                        "type": "mouseout",
                        "markname": "point"
                    },
                    "update": "{}"
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "xscale",
            "type": "band",
            "domain": {
                "data": "table",
                "field": "category",
                "sort": {
                    "field": "x",
                    "op": "min"
                }
            },
            "range": "width"
        },
        {
            "name": "yscale",
            "domain": {
                "data": "table",
                "field": "amount"
            },
            "nice": true,
            "range": "height"
        }
    ],
    "axes": [
        {
            "orient": "bottom",
            "scale": "xscale",
            "encode": {
                "ticks": {
                    "enter": {
                        "stroke": {
                            "value": "white"
                        }
                    }
                },
                "labels": {
                    "enter": {
                        "fill": {
                            "value": "white"
                        },
                        "angle": {
                            "value": 0
                        },
                        "align": {
                            "value": "left"
                        },
                        "baseline": {
                            "value": "middle"
                        },
                        "dx": {
                            "value": 3
                        }
                    }
                },
                "domain": {
                    "enter": {
                        "stroke": {
                            "value": "#fff"
                        }
                    }
                }
            }
        },
        {
            "orient": "left",
            "scale": "yscale",
            "encode": {
                "ticks": {
                    "enter": {
                        "stroke": {
                            "value": "white"
                        }
                    }
                },
                "labels": {
                    "enter": {
                        "fill": {
                            "value": "white"
                        },
                        "angle": {
                            "value": 0
                        },
                        "align": {
                            "value": "left"
                        },
                        "baseline": {
                            "value": "middle"
                        },
                        "dx": {
                            "value": 3
                        }
                    }
                },
                "domain": {
                    "enter": {
                        "stroke": {
                            "value": "#fff"
                        }
                    }
                }
            }
        }
    ],
    "marks": [
        {
            "type": "line",
            "from": {
                "data": "table"
            },
            "encode": {
                "enter": {
                    "x": {
                        "scale": "xscale",
                        "field": "category",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "yscale",
                        "field": "amount"
                    },
                    "stroke": {
                        "value": "#5357a1"
                    },
                    "strokeWidth": {
                        "value": 2
                    }
                },
                "update": {
                    "x": {
                        "scale": "xscale",
                        "field": "category",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "yscale",
                        "field": "amount"
                    },
                    "stroke": {
                        "value": "#5357a1"
                    },
                    "strokeWidth": {
                        "value": 2
                    }
                }
            }
        },
        {
            "name": "info",
            "type": "text",
            "zindex": 3,
            "encode": {
                "enter": {
                    "x": {
                        "offset": 390
                    },
                    "y": {
                        "offset": -20
                    },
                    "align": {
                        "value": "center"
                    },
                    "baseline": {
                        "value": "bottom"
                    },
                    "fill": {
                        "value": "#fff"
                    },
                    "text": {
                        "value": ""
                    },
                    "fontWeight": {
                        "value": "bold"
                    }
                },
                "update": {
                    "text": {
                        "signal": "info.amount ? (info.category + ' ' + info.amount) : ''"
                    }
                }
            }
        },
        {
            "type": "symbol",
            "name": "point",
            "from": {
                "data": "table"
            },
            "encode": {
                "enter": {
                    "x": {
                        "scale": "xscale",
                        "field": "category",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "yscale",
                        "field": "amount"
                    },
                    "fill": {
                        "value": "steelblue"
                    },
                    "stroke": {
                        "value": "white"
                    },
                    "strokeWidth": {
                        "value": 1
                    },
                    "size": {
                        "value": 100
                    }
                },
                "update": {
                    "x": {
                        "scale": "xscale",
                        "field": "category",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "yscale",
                        "field": "amount"
                    },
                    "fill": [
                        {
                            "test": "datum.category === info.category || datum.category === selectedCategory.category",
                            "value": "orange"
                        },
                        {
                            "value": "steelblue"
                        }
                    ],
                    "size": [
                        {
                            "test": "datum.category === info.category",
                            "value": 150
                        },
                        {
                            "value": 100
                        }
                    ]
                }
            }
        }
    ]
}
