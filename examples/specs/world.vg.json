{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "map",
    "width": 900,
    "height": 560,
    "autosize": "none",
    "padding": {
        "top": 0,
        "left": 0,
        "right": 0,
        "bottom": 0
    },
    "data": [
        {
            "name": "world",
            "url": "./data/world-110m.json",
            "format": {
                "type": "topojson",
                "feature": "countries"
            }
        }
    ],
    "projections": [
        {
            "name": "projection",
            "type": "mercator"
        }
    ],
    "scales": [
        {
            "name": "show_hood"
        }
    ],
    "signals": [
        {
            "name": "show_hood",
            "value": "no hood selected"
        }
    ],
    "marks": [
        {
            "type": "shape",
            "from": {
                "data": "world"
            },
            "encode": {
                "enter": {
                    "strokeWidth": {
                        "value": 0.5
                    },
                    "stroke": {
                        "value": "#bbb"
                    },
                    "fill": {
                        "value": "#e5e8d3"
                    }
                }
            },
            "transform": [
                {
                    "type": "geoshape",
                    "projection": "projection"
                }
            ]
        },
        {
            "type": "text",
            "encode": {
                "enter": {
                    "align": {
                        "value": "left"
                    },
                    "fontSize": {
                        "value": 45
                    },
                    "x": {
                        "value": 60
                    },
                    "y": {
                        "value": 60
                    },
                    "fill": {
                        "value": "red"
                    }
                },
                "update": {
                    "text": {
                        "signal": "show_hood"
                    }
                }
            }
        }
    ],
    "runtime": {
        "subscribe": [
            {
                "signal": "hover",
                "as": "show_hood"
            }
        ]
    }
}
